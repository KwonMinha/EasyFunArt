<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="13.76dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00000000"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
    android:id="@+id/cardView_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#00000000"
    app:cardCornerRadius="5dp">

    <ImageView
        android:id="@+id/home_first_image"
        android:src="@drawable/poster"
        android:layout_width="119.28dp"
        android:layout_height="165.16dp"
        />
</android.support.v7.widget.CardView>

        <TextView
            android:layout_below="@+id/cardView_layout"
            android:id="@+id/home_first_title"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.52dp"
            android:text="type"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="11dp" />

</RelativeLayout>