<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCDC09"
    android:gravity="center">

    <ImageView
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/dialog_heart_image"
        android:layout_width="58.77dp"
        android:layout_height="51.04dp"
        android:src="@drawable/popup_like_heart"/>

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/dialog_heart_image"
        android:id="@+id/dialog_heart_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="15dp"/>
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/dialog_heart_image"
        android:id="@+id/dialog_heart_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#000000"
        android:textSize="15dp"/>
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/dialog_heart_title"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="을(를) 마이페이지에서 확인하세요!"
        android:textColor="#1f1f1f"
        android:textSize="12dp"/>

</RelativeLayout>