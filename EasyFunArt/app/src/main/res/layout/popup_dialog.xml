<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="#ffffff"
        android:layout_centerInParent="true"
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"
            android:textColor="#1f1f1f"
            android:textSize="8pt"
            android:id="@+id/change_title"
            android:gravity="center"
            android:text="닉네임 변경"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <ImageButton
            android:padding="15dp"
            android:background="#ffffff"
            android:src="@drawable/mypage_nicknamechange_cancel"
            android:text="취소"
            android:id="@+id/cancel"
            android:layout_alignRight="@+id/change_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_marginBottom="5dp"
            android:textAlignment="center"
            android:background="@null"
            android:textColorHint="#919191"
            android:textSize="6pt"
            android:hint="변경하실 닉네임을 입력해주세요"
            android:layout_centerHorizontal="true"
            android:id="@+id/change_edit"
            android:layout_below="@+id/change_title"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

        <View
            android:background="#414141"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/change_edit"
            android:layout_width="200dp"
            android:layout_height="1dp"/>

        <TextView
            android:paddingLeft="40dp"
            android:textSize="6pt"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="25dp"
            android:layout_alignLeft="@+id/change_edit"
            android:textColor="#ff0000"
            android:id="@+id/error_msg"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/change_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:textColor="#1f1f1f"
            android:background="#fcdc09"
            android:src="@drawable/mypage_nicknamechange_ok"
            android:text="확인"
            android:id="@+id/ok1"
            android:layout_below="@+id/error_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</RelativeLayout>