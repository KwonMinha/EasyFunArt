<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_below="@+id/underLine"
        android:src="@drawable/pic1"
        android:id="@+id/review_profile"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <TextView
        android:textColor="#7a7a7a"
        android:paddingTop="60dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/review_profile"
        android:text="이펀아"
        android:id="@+id/review_name"
        android:textSize="11dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:textColor="#414141"
        android:layout_marginTop="10dp"
        android:text="2018.01.04 관람"
        android:layout_below="@+id/review_date"
        android:layout_toRightOf="@id/review_profile"
        android:id="@+id/review_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"/>
    <ImageView
        android:layout_alignBottom="@+id/review_name"
        android:src="@drawable/mypage_star_full"
        android:id="@+id/review_star"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/review_name"/>
    <TextView
        android:textColor="#7a7a7a"
        android:layout_marginTop="10dp"
        android:text="전시회 제목"
        android:textSize="11dp"
        android:layout_below="@+id/review_name"
        android:layout_toRightOf="@+id/review_profile"
        android:id="@+id/review_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#7a7a7a"
        android:layout_marginBottom="10dp"
        android:text="5일전 관람"
        android:id="@+id/before_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentRight="true"
        android:textSize="11dp"
        android:layout_below="@+id/review_content"
        android:layout_marginRight="34dp"
        />

    <View
        android:id="@+id/line"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#95989a"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:textStyle="bold"
        android:textSize="8pt"
        android:textColor="#414141"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/line"
        android:text="제목"
        android:id="@+id/review_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:layout_below="@+id/review_title"
        android:id="@+id/underLine"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#95989a"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>