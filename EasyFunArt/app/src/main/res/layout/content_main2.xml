<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="#f8f9fa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        ////////////////////////////////////////////// 첫 번째
        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:background="#f6f6f6"
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_hot"
                    android:id="@+id/main2_imageView"/>

                <TextView
                    android:id="@+id/main2_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/main2_imageView"
                    android:layout_marginStart="11dp"
                    android:layout_toEndOf="@+id/main2_imageView"
                    android:text="LET'S GET IT! 트렌디하고 힙한전시"
                    android:textColor="@color/colorPrimaryLight"
                    android:textSize="17dp" />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:nestedScrollingEnabled="false"
                android:id="@+id/main2_recyclerView1"
                android:layout_below="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />
        </RelativeLayout>

        ////////////////////////////// 두 번째

        <RelativeLayout
            android:layout_below="@+id/layout1"
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_hot"
                    android:id="@+id/main2_imageView2"/>

                <TextView
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/main2_imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/main2_textView2"
                    android:text="LET'S GET IT! 트렌디하고 힙한전시"
                    android:textSize="17dp"
                    android:textColor="@color/colorPrimaryLight"/>

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:nestedScrollingEnabled="false"
                android:id="@+id/main2_recyclerView2"
                android:layout_below="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />
        </RelativeLayout>

        ////////////////////////////////// 세 번째
        <RelativeLayout
            android:id="@+id/layout3"
            android:layout_below="@id/layout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_hot"
                    android:id="@+id/main2_imageView3"/>

                <TextView
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/main2_imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/main2_textView3"
                    android:text="LET'S GET IT! 트렌디하고 힙한전시"
                    android:textSize="17dp"
                    android:textColor="@color/colorPrimaryLight"/>

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:nestedScrollingEnabled="false"
                android:id="@+id/main2_recyclerView3"
                android:layout_below="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="50dp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />
        </RelativeLayout>

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>