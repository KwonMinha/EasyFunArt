<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="220dp"
    android:background="#ffffff"
    android:gravity="center_horizontal"
    xmlns:tools="http://schemas.android.com/tools">

    <DatePicker style="@style/starRatingBar"
        android:id="@+id/date_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:datePickerMode="spinner"
        android:layout_marginTop="40dp"
        android:calendarViewShown="false"
        />

    <TextView
        android:layout_below="@+id/button_set"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="제목이다"
        android:textColor="#1F1F1F"
        android:id="@+id/dialog_evaluation_title"
        android:textSize="15dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/dialog_evaluation_title"
        android:textSize="13dp"
        android:text="날짜를 입력해주세요."
        android:textColor="#1f1f1f"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:text="확인"
        android:id="@+id/dialog_evaluation_ok"
        android:layout_alignParentBottom="true"
        android:textColor="#1f1f1f"
        android:background="#FCDC09"/>

</RelativeLayout>
