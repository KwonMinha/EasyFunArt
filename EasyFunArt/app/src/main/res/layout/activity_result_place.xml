<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_taste_step3"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28.8dp"
        android:layout_marginTop="40dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/title_taste_place"/>
    </LinearLayout>
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/mood_text_id_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="28.8dp"
            android:layout_marginTop="16.64dp"
            android:text="자주 방문하는 장소를 중심으로 추천해드릴게요"
            android:textColor="#95989A"
            android:textSize="11dp"></TextView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="24.88dp"
        >
        <Button
            android:id="@+id/resultplace_seochonButton_btn"
            android:background="@drawable/prefrence_place_on_1"
            android:layout_width="96dp"
            android:layout_height="96dp"

            />
        <Button
            android:id="@+id/resultplace_gangnamButton_btn"
            android:background="@drawable/prefrence_place_on_2"

            android:layout_width="96dp"
            android:layout_height="96dp"

            android:layout_marginLeft="11.6dp"/>
        <Button
            android:id="@+id/resultplace_hongdaeButton_btn"
            android:background="@drawable/prefrence_place_on_3"

            android:layout_width="96dp"
            android:layout_height="96dp"

            android:layout_marginLeft="9.6dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24.88dp"
        android:layout_marginTop="14dp"
        >
        <Button
            android:id="@+id/resultplace_insadongButton_btn"
            android:background="@drawable/prefrence_place_on_4"
            android:layout_width="96dp"
            android:layout_height="96dp"
            />
        <Button
            android:id="@+id/resultplace_itaewonButton_btn"
            android:background="@drawable/prefrence_place_on_5"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginLeft="11.6dp"
            />
        <Button
            android:id="@+id/resultplace_chungmuroButton_btn"
            android:background="@drawable/prefrence_place_on_6"

            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginLeft="9.6dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24.88dp"
        android:layout_marginTop="9.6dp"
        >
        <Button
            android:id="@+id/resultplace_daehakroButton_btn"
            android:background="@drawable/prefrence_place_on_7"
            android:layout_width="96dp"
            android:layout_height="96dp"
            />
        <Button
            android:id="@+id/resultplace_jonggak_btn"
            android:background="@drawable/prefrence_place_on_8"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginLeft="11.6dp"
            />
        <Button
            android:id="@+id/resultplace_bukchonButton_btn"
            android:background="@drawable/prefrence_place_on_9"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginLeft="9.6dp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp">

        <Button
            android:id="@+id/resultplace_prevButton_btn"
            android:layout_width="24dp"
            android:layout_height="21dp"
            android:layout_marginLeft="19.2dp"
            android:background="@drawable/prefrence_genre_backbutton" />

        <Button
            android:id="@+id/resultplace_nextButton_btn"
            android:layout_width="24dp"
            android:layout_height="21dp"


            android:layout_marginLeft="273.6dp"
            android:background="@drawable/prefrence_information_nextpage" />

    </LinearLayout>
</LinearLayout>